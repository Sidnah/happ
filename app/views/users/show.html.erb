<div class="homepage">
	<header>
		<nav class="top">

			<ul class="nav">
				<li><%= link_to(image_tag("icons/House.svg"), root_path) %></li>
				<li><%= link_to(image_tag("icons/user.svg"), show_user_path(current_user.id)) %></li>
				<li><%= link_to(image_tag("icons/Settings.svg"), edit_user_registration_path) %></li>
				<li><%= link_to(image_tag("icons/Logout.svg"), destroy_user_session_path) %></li>
			</ul>
			<ul>
				<li class="right"><a href="#"><!-- <img src="icons/Icon_pen.svg" alt=""> --><%= image_tag("icons/Icon_pen.svg")%></a></li>
				<li class="right input"><input type="text" placeholder="search"></li>
			</ul>

		</nav>
		<%= link_to(root_path) do %><div class="top"></div><% end %>
	</header>
	<aside class="user profile">
		<div class="profile_content">
			<!-- <img src="../assets/images/picture.png" alt=""/> --><%= image_tag("picture.png")%>
			<h2><span><%= @user.full_name %></span></h2>
			<p class="username">@<%= @user.happername %></p>
			<span class="line_under_username">&nbsp;</span>
			<p class="description">Digital designer | Creative Artworker<br/>Je fais aussi du freelance, et jâ€™ai un site internet :<br/><span class="bolder">www.arthurguillerminhazan.fr</span></p>
			<ul>
				<li><span class="indicator">Happs</span><br/><span class="count"> <%= @posts.count %> </span></li>
				<% if user_signed_in? %>
					<% if @user ||= current_user %>
						<%= render 'shared/stats' %>
					<% end %>
				<% end %>
			</ul>
			<%= render 'follow_form' if user_signed_in? && @user.id != current_user.id %>
		</div>
		<ul class="gallery">
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
			<li><%= image_tag("Photo_01.png")%></li>
		</ul>
	</aside>

	<section>
		<div class="post">
			<%= render 'posts/new' %>
		</div>

		<%	@posts.each do |happ|%>
			<div class="feed">
				<span class="letters">AG</span>
				<p class="text"><%= happ.text %> </p>
				<span class="author"><%= link_to(happ.user.happername, show_user_path(happ.user.id)) %> |</span><span class="date"> <%= happ.created_at %></span>
				<ul>
						<li><%= link_to(image_tag("icons/respond.svg")) %></li>
						<li><%= link_to(image_tag("icons/like.svg")) %></li>
						<% if current_user.id==happ.user.id %>
							<li><%= link_to(image_tag("icons/trash.svg"), post_delete_path(happ.id)) %></li>
						<% else %>
							<li><a href="#"><%= image_tag("icons/retweet.svg")%></a></li>
						<% end %>
					</ul>
			</div>
		<% end %>


	</section>

	<aside class="right_side">
		<article>
			<h3>Trending topic</h3>
			<ul>
				<li class="trending">#LucasFPD</li>
				<li class="trending">#ManuVelma</li>
				<li class="trending">#ArthurPasDrole</li>
				<li class="trending">#GrosBabache</li>
				<li class="trending">#HeleneBonhomme</li>
			</ul>
		</article>
		<article>
			<h3>Who to follow ?</h3>
			<ul>
				<%@users.each do |user| %>
				<li class="wtf">
					<%= image_tag("Photo_tweet.svg")%>
					<p><%= user.full_name %><br/>
						<span class="pseudo">@<%= user.happername %></span></p>
						<%= link_to("Follow", show_user_path(user.id))%>
					</li>
					<% end %>
				</ul>
			</article>
		</aside>
	</div>
