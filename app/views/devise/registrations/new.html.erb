<div class="container">
  <div class="top"></div>
  <section>
    <h1><%= image_tag("icons/Logo_HAPP.svg")%></h1>
    <p class="base">Instant short messaging from space and above</p>
    <div class="wrapper create_account">
      <div class="bloc">
        <p>Sign up</p>
        
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <ul>  
            <li>
              <%= f.email_field :email, autofocus: true, :placeholder => 'EMAIL' %>
            </li>
            <li>
              <%= f.text_field :happername, autofocus: true, :placeholder => 'HAPPERNAME' %>
            </li>
            <li>
              <%= f.text_field :full_name, autofocus: true, :placeholder => 'FULL NAME' %>
            </li>
            <li>
              <%= f.password_field :password, autocomplete: "off", :placeholder => 'PASSWORD' %><br />
              <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </li>
            <li>
              <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'PASSWORD CONFIRMATION' %>
            </li>
            <span class="picture">
                <%= f.file_field :picture %>
            </span>
          </ul>
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
          <% end %>
      </div>
    </div>
    <div class="actions">
      <ul>
      <%= render "devise/shared/links" %>
      </ul>
    </div>
  </section>
</div>