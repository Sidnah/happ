<!DOCTYPE html>
<html>
<head>
	<title>Happ</title>
	<link data-turbolinks-track="true" href=<%= asset_path 'posts.css?body=1'%> media="all" rel="stylesheet" />
	<link data-turbolinks-track="true" href=<%= asset_path 'relationships.css?body=1'%> media="all" rel="stylesheet" />
	<link data-turbolinks-track="true" href=<%= asset_path 'reset-min.css?body=1'%> media="all" rel="stylesheet" />
	<link data-turbolinks-track="true" href=<%= asset_path 'application.css?body=1'%> media="all" rel="stylesheet" />
	<script data-turbolinks-track="true" src= <%= asset_path 'jquery.js?body=1'%></script>
	<script data-turbolinks-track="true" src=<%= asset_path  'jquery_ujs.js?body=1'%></script>
	<script data-turbolinks-track="true" src=<%= asset_path  'turbolinks.js?body=1'%></script>
	<script data-turbolinks-track="true" src=<%= asset_path  'posts.js?body=1'%></script>
	<script data-turbolinks-track="true" src=<%= asset_path  'relationships.js?body=1'%></script>
	<script data-turbolinks-track="true" src=<%= asset_path  'application.js?body=1'%></script>
	<meta content="authenticity_token" name="csrf-param" />
	<meta content="Q4U78Ppo3Auho7eqovTlH67g3Lys2QsjePlMMV0Hs0A=" name="csrf-token" />

	<p class="notice"></p>
	<p class="alert"></p>
</head>
<body>
	<div class="homepage">
		<header>
			<nav class="top">
				<ul class="nav">
					<li><%= link_to(image_tag("icons/House.svg"), root_path) %></li>
					<li><%= link_to(image_tag("icons/user.svg"), show_user_path(current_user.id)) %></li>
					<li><%= link_to(image_tag("icons/Settings.svg"), edit_user_registration_path) %></li>
					<li><%= link_to(image_tag("icons/Logout.svg"), destroy_user_session_path) %></li>
				</ul>
				<ul>
					<li class="right"><a href="#"><!-- <img src="icons/Icon_pen.svg" alt=""> --><%= image_tag("icons/Icon_pen.svg")%></a></li>
					<li class="right input"><input type="text" placeholder="search"></li>
				</ul>
			</nav>
			<%= link_to(root_path) do %><div class="top"></div><% end %>
		</header>
		<aside class="user profile">
			<div class="profile_content">

				<%= image_tag @user.picture.url if @user.picture? %>

				<h2><span><%= @user.full_name %></span></h2>
				<p class="username">@<%= @user.happername %></p>
				<span class="line_under_username">&nbsp;</span>
				<p class="description">Digital designer | Creative Artworker<br/>Je fais aussi du freelance, et j’ai un site internet :<br/><span class="bolder">www.arthurguillerminhazan.fr</span></p>
				<ul>
					<li><span class="indicator">Happs</span><br/><span class="count"> <%= @user.posts.count %> </span></li>
					<% if @user ||= current_user %>
						<%= render 'shared/stats' %>
					<% end %>
				</ul>
				<% if current_user != @user %>
				<a href="" class="side_profile_follow">Follow</a>
				<% end %>
			</div>

		</aside>

		<section>
			<div class="post">
				<%= render 'posts/new' %>
			</div>

			<% @feed_items = @feed_items.reverse
				@feed_items.each do |happ|%>
				<% happ.text.gsub!(/(?:(?<=\s)|^)#(\w*[A-Za-z_]+\w*)/){ "<a class=hashtag href=posts?utf8=✓&search="+$1+">#"+$1+"</a>" } %>

				<div class="feed">
					<span class="letters">AG</span>
					<p class="text"><%= raw(happ.text) %> </p>
					<span class="author"> <%= link_to(happ.user.happername, show_user_path(happ.user.id)) %>|</span><span class="date"> <%= happ.created_at %></span>
					<ul>
						<li><%= link_to(image_tag("icons/respond.svg")) %></li>
						<li><%= link_to(image_tag("icons/like.svg")) %></li>
						<% if current_user.id==happ.user.id %>
							<li><%= link_to(image_tag("icons/trash.svg"), post_delete_path(happ.id)) %></li>
						<% else %>
							<li><a href="#"><%= image_tag("icons/retweet.svg")%></a></li>
						<% end %>
					</ul>
				</div>
			<% end %>

		</section>

		<aside class="right_side">
			<article class="trendings">
				<h3>Trending topics</h3>
				<ul>
					<% @sorted_hashtags.each do |key, value| %>
						<li class="trending"><a href="posts?search=<%=key%>">#<%= key %></a> was happed <%= value %> times<br/></li>
					<% end %>

				</ul>

			</article>

			<article class="recommandations">

				<h3>Top Happers</h3>
				<ul>
					<% @users=@users.sort { |a,b| b.followers.count <=> a.followers.count } %>
					<% @users=@users.reject{ |u| u.id==current_user.id } %>
					<% @users.each do |user| %>
						<li class="wtf">
							<%= image_tag("Photo_tweet.svg")%>
							<p><%= user.full_name %><br/>
								<span class="pseudo">@<%= user.happername %></span></p>
								<%= link_to("Follow", show_user_path(user.id))%>
						</li>
					<% end %>
				</ul>
				</article>
	</div>




	